<h1><%= @goal.title %></h1>

<p>
  <strong>Description:</strong>
  <%= @goal.description %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @goal.deadline.strftime('%m/%d/%Y') %>
</p>

<h2>Activities</h2>

<ul>
  <% @goal.activities.each do |activity| %>
    <li>
      <%= activity.name %> - <%= activity.status %>
    </li>
  <% end %>
</ul>

<h2>Reminders</h2>

<ul>
  <% @goal.reminders.each do |reminder| %>
    <li>
      <%= reminder.title %> - <%= reminder.body %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_goal_path(@goal) %> |
<%= link_to 'Back', goals_path %>
